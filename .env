# ===========================================
# E-COMMERCE PROJEKT UMGEBUNGSVARIABLEN
# ===========================================

# Server Konfiguration
NODE_ENV=development
PORT=3000
HOST=localhost

# ===========================================
# CJ DROPSHIPPING API KONFIGURATION
# ===========================================
CJ_API_BASE_URL=https://developers.cjdropshipping.com
CJ_API_KEY=your_cj_api_key_here
CJ_API_SECRET=your_cj_api_secret_here
CJ_ACCESS_TOKEN=your_cj_access_token_here
CJ_REFRESH_TOKEN=your_cj_refresh_token_here

# CJ Dropshipping Warehouse IDs
CJ_WAREHOUSE_DE=DE001
CJ_WAREHOUSE_EU=EU001
CJ_WAREHOUSE_US=US001

# ===========================================
# STRIPE PAYMENT KONFIGURATION
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===========================================
# SENDGRID E-MAIL KONFIGURATION
# ===========================================
SENDGRID_API_KEY=SG.IhR_eChTeR_sEnDgRiD_aPi_KeY_hIeR
SENDGRID_FROM_EMAIL=ihre-verifizierte@email.com
SENDGRID_FROM_NAME=Smart Home Shop

# E-Mail Templates
SENDGRID_TEMPLATE_ORDER_CONFIRMATION=d-your_template_id_here
SENDGRID_TEMPLATE_SHIPPING_NOTIFICATION=d-your_template_id_here
SENDGRID_TEMPLATE_CONTACT_FORM=d-your_template_id_here

# ===========================================
# DATENBANK KONFIGURATION
# ===========================================
DATABASE_URL=mongodb://localhost:27017/ecommerce
DB_NAME=ecommerce_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# ===========================================
# SESSION & SECURITY
# ===========================================
SESSION_SECRET=your_very_secure_session_secret_here_min_32_chars
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ===========================================
# VERSAND KONFIGURATION
# ===========================================
# Kostenloser Versand ab (in Euro)
FREE_SHIPPING_THRESHOLD=50.00

# Versandkosten
SHIPPING_COST_EUROPE=0.00
SHIPPING_COST_INTERNATIONAL=4.99

# Lieferzeiten (in Tagen)
DELIVERY_TIME_STANDARD=3-5
DELIVERY_TIME_EXPRESS=1-2

# ===========================================
# WÄHRUNG & LOKALISIERUNG
# ===========================================
DEFAULT_CURRENCY=EUR
DEFAULT_LANGUAGE=de
TIMEZONE=Europe/Berlin

# ===========================================
# DATEI UPLOAD KONFIGURATION
# ===========================================
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,webp
UPLOAD_PATH=./uploads

# ===========================================
# CACHE KONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ===========================================
# EXTERNE SERVICES
# ===========================================
# Google Analytics
GA_TRACKING_ID=GA-XXXXXXXXX-X

# Facebook Pixel
FB_PIXEL_ID=your_facebook_pixel_id

# Google Maps API (für Versandberechnung)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ===========================================
# ENTWICKLUNG & DEBUG
# ===========================================
DEBUG=true
VERBOSE_LOGGING=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# ===========================================
# BACKUP & WARTUNG
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# WEBHOOK URLS
# ===========================================
WEBHOOK_ORDER_CREATED=https://yourdomain.com/webhooks/order-created
WEBHOOK_PAYMENT_SUCCESS=https://yourdomain.com/webhooks/payment-success
WEBHOOK_SHIPPING_UPDATE=https://yourdomain.com/webhooks/shipping-update

# ===========================================
# ADMIN KONFIGURATION
# ===========================================
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_PANEL_PATH=/admin

# ===========================================
# KASSENBON SYSTEM KONFIGURATION
# ===========================================
# E-Mail für Kassenbon-Versand
FROM_EMAIL=noreply@smarthomeshop.de
FROM_NAME=Smart Home Shop
SUPPORT_EMAIL=support@smarthomeshop.de

# SMTP Konfiguration (falls SendGrid nicht verfügbar)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Website URL für Links in E-Mails
SITE_URL=http://localhost:5000

# Firmeninformationen für Kassenbons
COMPANY_NAME=Smart Home Shop
COMPANY_ADDRESS=Musterstraße 123
COMPANY_CITY=12345 Berlin
COMPANY_COUNTRY=Deutschland
COMPANY_PHONE=+49 30 123456789
COMPANY_TAX_ID=DE123456789

# ===========================================
# PRODUKTBILD KONFIGURATION
# ===========================================
IMAGE_QUALITY=85
IMAGE_MAX_WIDTH=1200
IMAGE_MAX_HEIGHT=1200
THUMBNAIL_SIZE=300

# ===========================================
# NEWSLETTER & MARKETING
# ===========================================
MAILCHIMP_API_KEY=your_mailchimp_api_key
MAILCHIMP_LIST_ID=your_mailchimp_list_id

# ===========================================
# SOCIAL MEDIA INTEGRATION
# ===========================================
FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
TWITTER_API_KEY=your_twitter_api_key

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
SENTRY_DSN=https://your_sentry_dsn_here
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# ===========================================
# SSL & SECURITY
# ===========================================
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem
FORCE_HTTPS=false

# ===========================================
# CUSTOM DOMAIN KONFIGURATION
# ===========================================
DOMAIN=yourdomain.com
SUBDOMAIN=shop
FULL_URL=https://shop.yourdomain.com
